{
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": true,
		"lib": ["ESNext", "DOM"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"noFallthroughCasesInSwitch": true,
		"noPropertyAccessFromIndexSignature": false,
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "./dist",
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
